{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
    "production.deps.js"
  ],
  "exclude": [
    "node_modules"
  ]
}